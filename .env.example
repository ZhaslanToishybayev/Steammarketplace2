# Steam Integration Configuration

# Steam API Key (Required for production)
# Get your API key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# Steam OAuth Configuration
STEAM_RETURN_URL=http://localhost:3002/auth/steam/return
STEAM_REALM=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_256_bits
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=steam_marketplace
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# Redis Configuration (for session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3002

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=20

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_STEAM_INVENTORY_SYNC=true
ENABLE_TRADE_OFFERS=true
ENABLE_MARKETPLACE=true
ENABLE_PAYMENT_SYSTEM=false

# Third-party API Keys
STEAM_INVENTORY_API_KEY=your_steam_inventory_api_key
TRADE_OFFER_WEBHOOK_SECRET=your_webhook_secret

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_TRACKING_ID=your_analytics_id

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yoursite.com

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.yoursite.com
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Payment Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# Development Configuration
NODE_ENV=development
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_API_DOCS=true