# Environment Variables

# API Configuration (Use port 3000 for unified proxy server)
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.example.com
NEXT_PUBLIC_CDN_ENABLED=false
NEXT_PUBLIC_STEAM_CDN=https://steamcdn-a.akamaihd.net

# Steam OAuth Configuration
NEXT_PUBLIC_STEAM_RETURN_URL=http://localhost:3000/api/auth/steam/return
NEXT_PUBLIC_STEAM_API_KEY=your-steam-api-key

# Application Settings
NEXT_PUBLIC_APP_NAME=Steam Marketplace
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_CDN_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_IMAGE_COMPRESSION=true

# External Services
NEXT_PUBLIC_SENTRY_DSN=

# Development
NODE_ENV=development