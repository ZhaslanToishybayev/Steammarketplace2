# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and set all values before running production
# All secrets marked with [REQUIRED] must be set for production deployment

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3001

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=steam_user
POSTGRES_PASSWORD=your-super-secure-postgres-password-here  # [REQUIRED]
POSTGRES_DB=steam_marketplace

# MongoDB
MONGO_ROOT_USERNAME=admin  # [REQUIRED]
MONGO_ROOT_PASSWORD=your-super-secure-mongo-password-here  # [REQUIRED]
MONGO_DB=steam_marketplace

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-super-secure-redis-password-here  # [REQUIRED]

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Secrets - Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secure-jwt-secret-key-here  # [REQUIRED]
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-key-here  # [REQUIRED]
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration - Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com  # [REQUIRED]

# WebSocket Configuration
WS_URL=wss://yourdomain.com

# ============================================
# STEAM INTEGRATION
# ============================================
# Get your Steam API key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your-real-steam-api-key-here  # [REQUIRED]
STEAM_REALM=https://yourdomain.com
STEAM_RETURN_URL=https://yourdomain.com/api/auth/steam/return

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
LOG_LEVEL=info
GRAFANA_PASSWORD=your-super-secure-grafana-password-here  # [REQUIRED]
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002

# ============================================
# EXTERNAL SERVICES
# ============================================
# Payment Processing
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key-here  # [REQUIRED]
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key-here  # [REQUIRED]
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here  # [REQUIRED]

# Crypto Payments
CRYPTO_API_KEY=your-crypto-api-key-here  # [REQUIRED]
CRYPTO_API_SECRET=your-crypto-api-secret-here  # [REQUIRED]
CRYPTO_WEBHOOK_SECRET=your-crypto-webhook-secret-here  # [REQUIRED]

# CDN Configuration
CDN_URL=https://your-cdn-provider.com
CDN_ENABLED=true

# ============================================
# TRADING & BOT CONFIGURATION
# ============================================
# Bot Encryption Key - Generate with: openssl rand -hex 32
BOT_ENCRYPTION_KEY=your-super-secure-bot-encryption-key-here  # [REQUIRED]

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com  # [REQUIRED]
SMTP_PASS=your-app-specific-password-here  # [REQUIRED]
SMTP_FROM=noreply@yourdomain.com

# ============================================
# PRODUCTION-SPECIFIC SETTINGS
# ============================================
# Rate Limiting
AUTH_RATE_LIMIT_TTL=60
AUTH_RATE_LIMIT_MAX=5

# Database Pool Settings
DB_POOL_MAX=50
DB_POOL_MIN=10

# Cache Settings
REDIS_SESSIONS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUES_DB=2
REDIS_THROTTLE_DB=3

# Queue Settings
QUEUE_TRADE_CONCURRENCY=10
QUEUE_INVENTORY_CONCURRENCY=5
QUEUE_PRICE_CONCURRENCY=20

# ============================================
# SSL/TLS CONFIGURATION
# ============================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ============================================
# DEVELOPMENT ONLY (Remove in Production)
# ============================================
# The following variables should NOT be used in production
# NODE_ENV=development
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001
# JWT_SECRET=dev-jwt-secret-key
# REDIS_PASSWORD=dev-redis-password