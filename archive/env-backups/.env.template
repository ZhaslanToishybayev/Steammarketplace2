# ============================================
# Environment Variables Template
# Copy to .env and fill in your values
# ============================================

# Database
DB_USER=steammarket
DB_PASSWORD=your_secure_password_here
DB_NAME=steammarket
DATABASE_URL=postgresql://steammarket:your_secure_password_here@localhost:5432/steammarket

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Security (CHANGE THESE!)
SESSION_SECRET=generate_a_secure_random_string_here_at_least_32_chars
JWT_SECRET=another_secure_random_string_for_jwt_tokens

# Steam API
STEAM_API_KEY=your_steam_api_key_from_steamcommunity.com/dev/apikey

# Steam Bot Credentials
BOT_ACCOUNT_NAME=your_bot_steam_username
BOT_PASSWORD=your_bot_password
BOT_SHARED_SECRET=your_2fa_shared_secret
BOT_IDENTITY_SECRET=your_2fa_identity_secret

# URLs (Update for production)
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Platform settings
PLATFORM_FEE_PERCENT=5.0
NODE_ENV=development

# Optional: Pricing API
PRICEMPIRE_API_KEY=your_pricempire_api_key
