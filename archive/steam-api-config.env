# Steam API Configuration
# Enable optimized Steam API with Redis caching
ENABLE_OPTIMIZED_STEAM_API=true

# Cache timeouts (in seconds)
STEAM_CACHE_TTL_INVENTORY=300    # 5 minutes
STEAM_CACHE_TTL_PLAYER=600       # 10 minutes
STEAM_CACHE_TTL_MARKET=1800      # 30 minutes

# Rate limiting
STEAM_RATE_LIMIT=30              # requests per minute
STEAM_RATE_WINDOW=60000          # 1 minute in milliseconds

# Performance monitoring
STEAM_ENABLE_METRICS=true
STEAM_ENABLE_CACHE_STATS=true